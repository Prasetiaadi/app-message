<h1 class="ui center aligned icon header">
  <i class="circular users icon blue"></i>
  Type a message
</h1>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
       </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid left icon input">
              <input type="text" placeholder="Type a message ...">
              <i class="borderd inverted blue icon edit"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui blue vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

